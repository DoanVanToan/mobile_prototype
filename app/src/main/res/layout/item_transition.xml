<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="element"
            type="com.framgia.mobileprototype.data.model.Element"/>

        <variable
            name="transition"
            type="String"/>

        <variable
            name="handler"
            type="com.framgia.mobileprototype.linkto.TransitionItemActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dp_170"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:clickable="@{!transition.equals(element.transition)}"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> handler.chooseTransition(transition, element)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{transition.equals(element.transition) ? @color/colorPrimary : @android:color/white}"
            android:gravity="center"
            android:text="@{transition}"
            android:textColor="@{transition.equals(element.transition) ? @android:color/white : @color/cardview_dark_background}"
            android:textSize="@dimen/sp_14"/>

    </android.support.v7.widget.CardView>
</layout>
